@model WebApplication1.Models.CBox

<h2>編輯 CBox</h2>

<form asp-action="Edit" method="post">
    <input asp-for="_Key" type="hidden" />
    <div class="form-group">
        <label>Name</label>
        <input asp-for="_Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Level</label>
        <input asp-for="_Level" class="form-control" />
    </div>
    <div class="form-group">
        <label>CreateTime</label>
        <input asp-for="_CreateTime" class="form-control" type="datetime-local" />
    </div>
    <button type="submit" class="btn btn-primary">更新</button>
</form>

<a asp-action="Index">返回列表</a>