@model WebApplication1.Models.CPack

<h2>編輯 CPack</h2>

<form asp-action="Edit" method="post">
    <input asp-for="_SeqNo" type="hidden" />
    <div class="form-group">
        <label>Msg</label>
        <input asp-for="_Msg" class="form-control" />
    </div>
    <div class="form-group">
        <label>Code</label>
        <input asp-for="_Code" class="form-control" />
    </div>
    <div class="form-group">
        <label>UpdateTime</label>
        <input asp-for="_UpdateTime" class="form-control" type="datetime-local" />
    </div>
    <button type="submit" class="btn btn-primary">更新</button>
</form>

<a asp-action="Index">返回列表</a>